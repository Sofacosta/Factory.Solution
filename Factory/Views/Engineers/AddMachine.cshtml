@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add a machine certification to @Html.DisplayFor(model => model.Name)</h2>

<hr>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  
  @Html.Label("Select machine")
  @Html.DropDownList("MachineId")

  <input type="submit" value="Add machine" class=" btn-success">
}

<input type="button" class="btn btn-outline-primary" value="Home" onclick="location.href='@Url.Action("Index", "Home")'">
<input type="button" class="btn btn-outline-primary" value="Back to details" onclick="location.href='@Url.Action("Details", new { id = Model.EngineerId })'">
