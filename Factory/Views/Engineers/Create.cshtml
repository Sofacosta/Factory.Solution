@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new engineer</h4>
<div class="flex-center">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { required="required", autocomplete="off"})

    <input type="submit" value="Add engineer" class="btn btn-outline-success">
  }
  <input type="button" class="btn btn-info" value="Back to list" onclick="location.href='@Url.Action("Index")'">
</div>